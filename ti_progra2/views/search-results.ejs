<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

<body>
    <%- include("./partials/header") %>
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Resultados de búsqueda</h2>
            </div>
            <% if(error) { %>
            <p class="avisos"><%= error %></p>
            <% } %>

            <% productos.forEach(function(producto) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/products/<%= producto.id %>">
                        <figure class="product-box_image">
                            <img src="/images/products/<%= producto.foto %>" alt="">
                        </figure>
                        <article class="product-box_data">
                            <h2>
                                <%= producto.nombreProducto %>
                            </h2>
                            <p>
                                <%= producto.descProducto %>
                            </p>
                            <!-- Descomenta estas líneas si deseas mostrar comentarios -->
                            <!-- <p>Comentarios: <%= //producto.productoEncontradoComentarios.length %> </p> NO ANDA -->
                            <!-- <p>Cargado por: <a href="/users/profile/id/<%= //producto.usuario.id %>"><%= producto.usuario.usuario %></a></p> NO ANDA-->
                        </article>
                    </a>
                </section>
            </div>
            <% }); %>
        </div>
    </div>
    <%- include("./partials/footer") %>
</body>

</html>
