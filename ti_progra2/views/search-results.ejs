<!DOCTYPE html>
<html lang="es">
    <%- include("./partials/head") %>
    <body>
        <%- include("./partials/header") %>
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">Resultados de b√∫squeda</h2>
                </div>
                <% for (let i = 0; i < 4; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/products">
                                <figure class="product-box_image">
                                    <img src="<%= productoEncontrado[i].imagen %>" alt="">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= productoEncontrado[i].nombre %></h2>
                                    <p><%= productoEncontrado[i].descripcion %></p>
                                    <p>Comentarios: <%= productoEncontrado[i].comentarios.length %></p>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            </div>
        </div>
        <%- include("./partials/footer") %>
    </body>
</html>
