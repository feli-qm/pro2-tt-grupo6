<!-- Header -->
<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img src="/images/logo2.png">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <h1>BEAUTY BLOOM</h1>
                <form action="/search-results" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar productos, marcas y más"
                        class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">¡Hola <strong><%= locals.user.nombre %></strong>, es genial verte de vuelta!</a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">
            <ul class="left-navbar" id="titulos">
                <li><a href="/">Todos los productos</a></li>
                <li><a href="/products/add">Agregar producto</a></li>
            </ul>

            <ul class="right-navbar">
                <li><a id="titulos" href="/users/profile/<%=locals.user.id %>"><i class="fas fa-user">
                            <%=user.nombre %>
                        </i></a></li>
                <li>
                    <form action="/users/logout" method="POST">
                        <button class="logout" type="submit" id="titulos">
                            Cerrar sesión <i class="fas fa-sign-in-alt"></i>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
    </div>
</header>
<!-- /Header -->