<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

	<body>
		<% if (locals.user != undefined){%>
			<%- include('./partials/headerLogueado')%>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Editar mi perfil</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<h2 class="col-12">
						<form action="/users/edit" method="get">
							<!-- Ingresamos la ruta para que no se rompa al enviar el form -->
							<label for="email">Nuevo email:</label>
							<input type="email" id="email" name="email" ><br><br>

							<label for="nombre">Nuevo usuario:</label>
							<input type="text" id="nombre" name="nombre" ><br><br>

							<label for="contrasenia">Nueva contraseña:</label>
							<input type="password" id="contrasenia" name="contrasenia" ><br><br>

							<label for="fechaNacimiento">Nueva fecha de Nacimiento:</label>
							<input type="date" id="fechaNacimiento" name="fechaNacimiento" ><br><br>

							<label for="numeroDocumento">Nuevo número de Documento:</label>
							<input type="number" id="numeroDocumento" name="numeroDocumento" ><br><br>

							<label for="foto">Nueva foto de Perfil:</label>
							<input type="text" id="foto" name="foto"><br><br>

							<button type="submit">Enviar</button>
						</form>
					</h2>
					<%- include("./partials/footer") %>
	</body>

</html>