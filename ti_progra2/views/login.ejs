<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

	<body>
		<%- include("./partials/header") %>

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Ingresar</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<h2 class="col-12">
						<form action="/users/login" method="GET">
							<label for="nombre">Usuario (Email):</label>
							<input type="email" id="nombre" name="nombre" required><br><br>
							<!-- Required: Para que sea campo obligatorio -->

							<label for="contrasenia">Contraseña:</label>
							<input type="password" id="contrasenia" name="contrasenia" required><br><br>

							<label for="recordarme">Recordarme</label><br><br>
							<input type="checkbox" id="recordarme" name="recordarme">

							<button type="submit">Iniciar Sesión</button>
						</form>
					</h2>

					<%- include("./partials/footer") %>

	</body>

</html>