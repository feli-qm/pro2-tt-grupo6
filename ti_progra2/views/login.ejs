<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

	<body>
		<% if (locals.user != undefined){%>
			<%- include('./partials/headerLogueado')%>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Ingresar</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<h2 class="col-12">
						<form action="/users/login" method="POST">
							<label for="nombre">Usuario (Email):</label>
							<input type="email" id="nombre" name="email" ><br><br>
							<% if (locals.errors && errors.email) { %>
								<p class="feedback"><%= errors.email.msg %></p>
								<% } %>

							<label for="contrasenia">Contraseña:</label>
							<input type="password" id="contrasenia" name="contrasenia"><br><br>
							<% if (locals.errors && errors.contrasena) { %>
								<p class="feedback"><%= errors.contrasena.msg %></p>
								<% } %>


							<label for="recordarme">Recordarme</label><br><br>
							<input type="checkbox" id="recordarme" name="recordarme">

							<button type="submit">Iniciar Sesión</button>
						</form>
					</h2>

					<%- include("./partials/footer") %>

	</body>

</html>