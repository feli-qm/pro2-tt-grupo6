<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

<body>
    <% if (locals.user != undefined){%>
        <%- include('./partials/headerLogueado')%>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>
    <!-- Banner -->
    <div class="banner">
        <img src="/images/banner.PNG" alt="Banner de ofertas">
    </div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Novedades</h2>
            </div>
            <!-- Show the "ultimos" products -->
            <% for (let i = 0; i < productos.length && i < 4; i++){ %>
                <!-- Show mis productos -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/<%= productos[i].id %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= productos[i].foto %>" alt="">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= productos[i].nombreProducto %></h2>
                                <p><%= productos[i].descProducto %></p>
                                <p>Comentarios: <%= productos[i].productoComentario.length %> </p> 
                                <p>Cargado por: <a href="/users/profile/id/<%= productos[i].productoUsuario.id %>"><%= productos[i].productoUsuario.nombre %></a></p>
        
                            
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        </div>
    </div>
    <!-- /Novedades -->

    <!-- Más comentados -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Más comentados</h2>
            </div>
            <% for (let i = 4; i < productos.length && i < 8; i++){ %>
                <!-- Show mis productos -->
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/<%= productos[i].id %>">
                            <figure class="product-box_image">
                                <img src="/images/products/<%= productos[i].foto %>" alt="">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= productos[i].nombreProducto %></h2>
                                <p><%= productos[i].descProducto %></p>
                                <p>Comentarios: <%= productos[i].productoComentario.length %> </p> 
                                <p>Cargado por: <a href="/users/profile/id/<%= productos[i].productoUsuario.id %>"><%= productos[i].productoUsuario.nombre %></a></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        </div>
    </div>
    <!-- /Más comentados -->
    <%- include("./partials/footer") %>
</body>
</html>

