<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

<body>
<%- include("./partials/headerLogueado") %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= perfil.fotoPerfil%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= perfil.usuario%>
						<a href="profile-edit">				<!-- NO FUNCIONA -->

							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<% for (let i=0; i < productoEncontrado.length; i++){%>
			<!-- Show mis productos --> <!-- ACA SERIA UN FOR RECORRIEDNO TODOS LOS PRODUCTOS??-->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products">
						<figure class="product-box_image">
							<img src="<%= productoEncontrado.imagen%>" alt="">
						</figure>
						<article class="product-box_data">
							<h2> <%= productoEncontrado[i].nombre %> </h2>
							<p><%= productoEncontrado[i].descripcion %> </p>
							<p>Comentarios: <%= productoEncontrado[i].comentarios.length %></p>
						</article>
					</a>
					<%}%>
				</section>
			</div>
			
				
	<!-- /Mis productos -->
	<%- include("./partials/footer") %>
</body>	
</html>