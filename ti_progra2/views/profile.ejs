<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

	<body>
		<% if (locals.user !=undefined){%>
			<%- include('./partials/headerLogueado')%>
				<% } else { %>
					<%- include('./partials/header') %>
						<% } %>
							<!-- Datos del usuario -->
							<section class="info-usuario container products-wrapper">
								<div class="container products-wrapper"></div>
								<div class="row">
									<div class="img-container offset-3 col-2">
										<img src="<%= perfil.foto%>" alt="foto de perfil" class="foto-perfil">
									</div>
									<div class="data-container col-6">
										<div class="d-flex align-items-center ">
											<h1 class="main-title">
												<%= perfil.nombre%>
												<% if (locals.user) { %>
													<% if (locals.user.id === perfil.id) { %>
														<a href="/users/edit">
															<i class="fas fa-cog"></i>
														</a>
														<%} %>
														<%} %>
											</h1>
											<a class="btn mt-3 ml-4" href="">SEGUIR</a>
										</div>
										<div>
											<ul class="">
												<li>
													<%= perfil.email%>
												</li>
												<li>
													<%=usuarioProducto.length%> productos
												</li>
												<li>200 seguidores</li>
												<li>
													<%= usuarioComentario.length%> comentarios
												</li>
											</ul>
										</div>
									</div>
								</div>
							</section>
							<!-- /Datos del usuario -->

							<!-- Mis productos -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Mis productos</h2>
									</div>
									<% for (let i=0; i < usuarioProducto.length; i++) { %>
										<!-- Show mis productos -->
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/products/<%=usuarioProducto[i].id %>">
													<figure class="product-box_image">
														<img src="/images/products/<%= usuarioProducto[i].foto %>" alt="">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= usuarioProducto[i].nombreProducto %>
														</h2>
														<p>
															<%= usuarioProducto[i].descProducto %>
														</p>
														<p>Comentarios: <%= usuarioComentario.length%> <!-- REVISAR POR QUE NO FUNCIONA CON .LENGTH -->
														</p>
													</article>
												</a>
											</section>
										</div>
										<% } %>
								</div>
							</div>
							<!-- /Mis productos -->

							<%- include("./partials/footer") %>
	</body>

</html>